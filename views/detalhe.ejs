<%- include('partials/header', { titulo: 'Detalhes' }) %>

<style>
    .container-detalhe { 
        max-width: 800px; 
        margin: 0 auto; 
        background: var(--bg-card); /* Usa vari√°vel para Dark Mode */
        border-radius: 16px; 
        overflow: hidden; 
        box-shadow: var(--sombra-card); 
        border: 1px solid var(--borda-suave);
    }
    
    .detalhe-img { 
        width: 100%; 
        height: 400px; 
        object-fit: cover; 
        background-color: #eee; 
    }
    
    .detalhe-conteudo { 
        padding: 2rem; 
    }
    
    .detalhe-meta { 
        display: flex; 
        gap: 15px; 
        margin: 1rem 0; 
        color: var(--texto-leve); 
        font-size: 0.95rem; 
        flex-wrap: wrap; 
    }
    
    .detalhe-meta span { 
        display: flex; 
        align-items: center; 
        gap: 5px; 
        background: var(--cor-primaria-clara);
        padding: 5px 10px;
        border-radius: 6px;
        color: var(--cor-primaria);
        font-weight: 600;
    }
    
    .detalhe-desc { 
        font-size: 1.1rem; 
        line-height: 1.8; 
        color: var(--texto-corpo); 
        margin-top: 1.5rem; 
        white-space: pre-wrap; 
    }
    
    .btn-voltar { 
        display: inline-block; 
        color: var(--cor-primaria); 
        text-decoration: none; 
        font-weight: 600; 
        font-size: 1.1rem;
    }

    /* Ajuste para o topo da p√°gina */
    .barra-topo {
        max-width: 800px; 
        margin: 0 auto 1rem auto; 
        display: flex; 
        justify-content: space-between; 
        align-items: center;
    }
</style>

<main>
    <div class="barra-topo">
        <a href="javascript:history.back()" class="btn-voltar">‚Üê Voltar</a>
        
        <button onclick="compartilharZap()" class="btn" style="background-color: #25D366; color: white; border: none; font-weight: bold; display: flex; align-items: center; gap: 8px; cursor: pointer;">
            üì≤ Compartilhar
        </button>
    </div>

    <div class="container-detalhe" id="areaDetalhe">
        <p style="padding: 2rem; text-align: center;">Carregando informa√ß√µes...</p>
    </div>
</main>

<script>
    document.addEventListener('DOMContentLoaded', async () => {
        // 1. Pega os par√¢metros da URL (ex: ?tipo=evento&id=5)
        const params = new URLSearchParams(window.location.search);
        const tipo = params.get('tipo'); // 'evento' ou 'estabelecimento'
        const id = params.get('id');
        const container = document.getElementById('areaDetalhe');

        // Valida√ß√£o simples
        if (!tipo || !id) {
            container.innerHTML = '<p style="padding:2rem;">Conte√∫do n√£o encontrado (Link incompleto).</p>';
            return;
        }

        // Define a rota da API (pluraliza o tipo para bater com a rota)
        // ex: evento -> eventos, estabelecimento -> estabelecimentos
        const rotaApi = tipo === 'evento' ? 'eventos' : 'estabelecimentos';

        try {
            // Busca o item espec√≠fico no backend
            let response = await fetch(`/api/${rotaApi}/${id}`);
            
            if (!response.ok) throw new Error('Item n√£o encontrado no sistema.');
            
            const item = await response.json();

            // L√≥gica de Exibi√ß√£o (Data ou Categoria / Local ou Endere√ßo)
            const dataOuCategoria = item.data 
                ? `üìÖ ${new Date(item.data).toLocaleDateString('pt-BR')}` 
                : `üè∑Ô∏è ${item.categoria}`;
            
            const localOuEndereco = item.local 
                ? `üìç ${item.local}` 
                : `üìç ${item.endereco || 'Endere√ßo n√£o informado'}`;

            // Renderiza o HTML
            container.innerHTML = `
                <img src="${item.imagem || 'https://via.placeholder.com/800x400'}" class="detalhe-img" alt="${item.nome}">
                
                <div class="detalhe-conteudo">
                    <h1 style="margin: 0; color: var(--texto-titulo); font-size: 2rem;">${item.nome}</h1>
                    
                    <div class="detalhe-meta">
                        <span>${dataOuCategoria}</span>
                        <span>${localOuEndereco}</span>
                        ${item.telefone ? `<span>üìû ${item.telefone}</span>` : ''}
                    </div>

                    <div class="detalhe-desc">
                        ${item.descricao || 'Sem descri√ß√£o dispon√≠vel para este item.'}
                    </div>
                </div>
            `;

            // Atualiza o t√≠tulo da aba do navegador
            document.title = `${item.nome} - Portal Pedro II`;

        } catch (error) {
            console.error(error);
            container.innerHTML = `<p style="padding:2rem; color:red; text-align:center;">Erro ao carregar: ${error.message}</p>`;
        }
    });

    // Fun√ß√£o separada para o WhatsApp
    function compartilharZap() {
        const url = window.location.href;
        // Pega o t√≠tulo da p√°gina e remove o sufixo do site para n√£o ficar repetitivo
        const titulo = document.title.replace(' - Portal Pedro II', '');
        
        const texto = `Olha que legal esse lugar em Pedro II: *${titulo}*\n\nVeja mais aqui: ${url}`;
        
        const linkZap = `https://api.whatsapp.com/send?text=${encodeURIComponent(texto)}`;
        window.open(linkZap, '_blank');
    }
</script>

<%- include('partials/footer') %>
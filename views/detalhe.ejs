<%- include('partials/header', { titulo: 'Detalhes' }) %>

    <style>
        .container-detalhe {
            max-width: 800px;
            margin: 0 auto;
            background: var(--bg-card);
            /* Usa vari√°vel para Dark Mode */
            border-radius: 16px;
            overflow: hidden;
            box-shadow: var(--sombra-card);
            border: 1px solid var(--borda-suave);
        }

        .detalhe-img {
            width: 100%;
            height: 400px;
            object-fit: cover;
            background-color: #eee;
        }

        .detalhe-conteudo {
            padding: 2rem;
        }

        .detalhe-meta {
            display: flex;
            gap: 15px;
            margin: 1rem 0;
            color: var(--texto-leve);
            font-size: 0.95rem;
            flex-wrap: wrap;
        }

        .detalhe-meta span {
            display: flex;
            align-items: center;
            gap: 5px;
            background: var(--cor-primaria-clara);
            padding: 5px 10px;
            border-radius: 6px;
            color: var(--cor-primaria);
            font-weight: 600;
        }

        .detalhe-desc {
            font-size: 1.1rem;
            line-height: 1.8;
            color: var(--texto-corpo);
            margin-top: 1.5rem;
            white-space: pre-wrap;
        }

        .btn-voltar {
            display: inline-block;
            color: var(--cor-primaria);
            text-decoration: none;
            font-weight: 600;
            font-size: 1.1rem;
        }

        /* Ajuste para o topo da p√°gina */
        .barra-topo {
            max-width: 800px;
            margin: 0 auto 1rem auto;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        /* --- Estrelas --- */
        .area-avaliacoes {
            margin-top: 3rem;
            border-top: 1px solid var(--borda-suave);
            padding-top: 2rem;
        }

        .star-rating {
            display: flex;
            gap: 5px;
            font-size: 2rem;
            cursor: pointer;
            flex-direction: row-reverse;
            justify-content: flex-end;
        }

        .star-rating input {
            display: none;
        }

        .star-rating label {
            color: #ccc;
            transition: color 0.2s;
        }

        /* M√°gica do CSS: Ao passar o mouse, pinta as anteriores */
        .star-rating label:hover,
        .star-rating label:hover~label,
        .star-rating input:checked~label {
            color: gold;
        }

        .card-avaliacao {
            background: var(--bg-card);
            border: 1px solid var(--borda-suave);
            padding: 1rem;
            border-radius: 8px;
            margin-bottom: 10px;
        }

        .nota-badge {
            color: gold;
            font-weight: bold;
        }
    </style>

    <main>
        <div class="barra-topo">
            <a href="javascript:history.back()" class="btn-voltar">‚Üê Voltar</a>

            <button onclick="compartilharZap()" class="btn"
                style="background-color: #25D366; color: white; border: none; font-weight: bold; display: flex; align-items: center; gap: 8px; cursor: pointer;">
                üì≤ Compartilhar
            </button>
        </div>

        <div class="container-detalhe" id="areaDetalhe">
            <p style="padding: 2rem; text-align: center;">Carregando informa√ß√µes...</p>
        </div>

        <div class="container-detalhe area-avaliacoes" style="margin-top: 2rem;">
            <h2 style="color: var(--cor-primaria);">Avalia√ß√µes <span id="mediaGeral"
                    style="font-size:1rem; color:#666;">(0.0 ‚≠ê)</span></h2>

            <div style="background: rgba(0,0,0,0.03); padding: 1.5rem; border-radius: 12px; margin-bottom: 2rem;">
                <h4 style="margin-top:0;">Deixe sua opini√£o</h4>
                <form id="formAvaliacao">
                    <div class="star-rating" style="margin-bottom: 10px;">
                        <input type="radio" id="s5" name="nota" value="5"><label for="s5">‚òÖ</label>
                        <input type="radio" id="s4" name="nota" value="4"><label for="s4">‚òÖ</label>
                        <input type="radio" id="s3" name="nota" value="3"><label for="s3">‚òÖ</label>
                        <input type="radio" id="s2" name="nota" value="2"><label for="s2">‚òÖ</label>
                        <input type="radio" id="s1" name="nota" value="1"><label for="s1">‚òÖ</label>
                    </div>

                    <input type="text" id="autorNome" placeholder="Seu Nome" required style="margin-bottom: 10px;">
                    <textarea id="comentarioTexto" rows="3" placeholder="O que achou deste lugar?"
                        style="width:100%; padding:10px; border-radius:8px; border:1px solid #ccc;"></textarea>
                    <button type="submit" class="btn btn-enviar" style="margin-top: 10px;">Enviar Avalia√ß√£o</button>
                </form>
            </div>

            <div id="listaAvaliacoes">
                <p>Carregando opini√µes...</p>
            </div>
        </div>
    </main>

    <script>
        document.addEventListener('DOMContentLoaded', async () => {
            // 1. Pega os par√¢metros da URL (ex: ?tipo=evento&id=5)
            const params = new URLSearchParams(window.location.search);
            const tipo = params.get('tipo'); // 'evento' ou 'estabelecimento'
            const id = params.get('id');
            const container = document.getElementById('areaDetalhe');

            // Valida√ß√£o simples
            if (!tipo || !id) {
                container.innerHTML = '<p style="padding:2rem;">Conte√∫do n√£o encontrado (Link incompleto).</p>';
                return;
            }

            // Define a rota da API (pluraliza o tipo para bater com a rota)
            // ex: evento -> eventos, estabelecimento -> estabelecimentos
            const rotaApi = tipo === 'evento' ? 'eventos' : 'estabelecimentos';

            try {
                // Busca o item espec√≠fico no backend
                let response = await fetch(`/api/${rotaApi}/${id}`);

                if (!response.ok) throw new Error('Item n√£o encontrado no sistema.');

                const item = await response.json();

                // L√≥gica de Exibi√ß√£o (Data ou Categoria / Local ou Endere√ßo)
                const dataOuCategoria = item.data
                    ? `üìÖ ${new Date(item.data).toLocaleDateString('pt-BR')}`
                    : `üè∑Ô∏è ${item.categoria}`;

                const localOuEndereco = item.local
                    ? `üìç ${item.local}`
                    : `üìç ${item.endereco || 'Endere√ßo n√£o informado'}`;

                // Renderiza o HTML
                container.innerHTML = `
                <img src="${item.imagem || 'https://via.placeholder.com/800x400'}" class="detalhe-img" alt="${item.nome}">
                
                <div class="detalhe-conteudo">
                    <h1 style="margin: 0; color: var(--texto-titulo); font-size: 2rem;">${item.nome}</h1>
                    
                    <div class="detalhe-meta">
                        <span>${dataOuCategoria}</span>
                        <span>${localOuEndereco}</span>
                        ${(() => {
                        if (!item.telefone) return '';
                        const num = item.telefone.replace(/\D/g, '');
                        let html = `<span>üìû ${item.telefone}</span>`;

                        // Se for celular v√°lido, adiciona o bot√£o do Zap
                        if (num.length >= 10) {
                            html += `<a href="https://wa.me/55${num}?text=Ol√°, vi seu estabelecimento no Portal Pedro II!" target="_blank" 
                    style="background-color: #25D366; color: white; padding: 4px 10px; border-radius: 50px; text-decoration: none; font-weight: bold; font-size: 0.9rem; display: flex; align-items: center; gap: 5px;">
                    üí¨ Chamar no Zap
                 </a>`;
                        }
                        return html;
                    })()}
                    </div>

                    <div class="detalhe-desc">
                        ${item.descricao || 'Sem descri√ß√£o dispon√≠vel para este item.'}
                    </div>
                </div>
            `;

                // Atualiza o t√≠tulo da aba do navegador
                document.title = `${item.nome} - Portal Pedro II`;

            } catch (error) {
                console.error(error);
                container.innerHTML = `<p style="padding:2rem; color:red; text-align:center;">Erro ao carregar: ${error.message}</p>`;
            }
        });

        // Fun√ß√£o separada para o WhatsApp
        function compartilharZap() {
            const url = window.location.href;
            // Pega o t√≠tulo da p√°gina e remove o sufixo do site para n√£o ficar repetitivo
            const titulo = document.title.replace(' - Portal Pedro II', '');

            const texto = `Olha que legal esse lugar em Pedro II: *${titulo}*\n\nVeja mais aqui: ${url}`;

            const linkZap = `https://api.whatsapp.com/send?text=${encodeURIComponent(texto)}`;
            window.open(linkZap, '_blank');
        }

        // --- L√ìGICA DE AVALIA√á√ïES ---
        const formAvaliacao = document.getElementById('formAvaliacao');
        const listaAvaliacoes = document.getElementById('listaAvaliacoes');

        // 1. Tenta pegar o nome salvo no perfil
        const perfilSalvo = JSON.parse(localStorage.getItem('perfil_visitante'));
        if (perfilSalvo && perfilSalvo.nome) {
            document.getElementById('autorNome').value = perfilSalvo.nome;
        }

        // 2. Carregar Avalia√ß√µes
        async function carregarAvaliacoes() {
            // Pega ID e Tipo da URL (que j√° pegamos l√° em cima no script original)
            const params = new URLSearchParams(window.location.search);
            const tipo = params.get('tipo');
            const id = params.get('id');

            const res = await fetch(`/api/avaliacoes/${tipo}/${id}`);
            const dados = await res.json();

            // Atualiza m√©dia
            const mediaArredondada = parseFloat(dados.media).toFixed(1);
            document.getElementById('mediaGeral').innerText = `(${mediaArredondada} ‚≠ê ‚Ä¢ ${dados.total} opini√µes)`;

            // Renderiza Lista
            listaAvaliacoes.innerHTML = '';
            if (dados.lista.length === 0) {
                listaAvaliacoes.innerHTML = '<p style="color:#777;">Seja o primeiro a avaliar!</p>';
                return;
            }

            dados.lista.forEach(av => {
                // Gera estrelas visuais
                const estrelas = '‚≠ê'.repeat(av.nota);
                listaAvaliacoes.innerHTML += `
                <div class="card-avaliacao">
                    <div style="display:flex; justify-content:space-between;">
                        <strong>${av.autor}</strong>
                        <span class="nota-badge">${estrelas}</span>
                    </div>
                    <p style="margin: 5px 0; color: var(--texto-corpo);">${av.comentario || ''}</p>
                    <small style="color:#999;">${new Date(av.data).toLocaleDateString('pt-BR')}</small>
                </div>
            `;
            });
        }

        // 3. Enviar Avalia√ß√£o
        formAvaliacao.addEventListener('submit', async (e) => {
            e.preventDefault();
            const params = new URLSearchParams(window.location.search);

            // Pega qual estrela est√° marcada
            const notaSelecionada = document.querySelector('input[name="nota"]:checked');
            if (!notaSelecionada) {
                alert('Por favor, selecione as estrelas!');
                return;
            }

            const dados = {
                item_id: params.get('id'),
                tipo: params.get('tipo'),
                nota: notaSelecionada.value,
                autor: document.getElementById('autorNome').value,
                comentario: document.getElementById('comentarioTexto').value
            };

            // Salva o nome para a pr√≥xima (UX)
            localStorage.setItem('perfil_visitante', JSON.stringify({ nome: dados.autor }));

            await fetch('/api/avaliacoes', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(dados)
            });

            formAvaliacao.reset();
            carregarAvaliacoes(); // Recarrega a lista
        });

        // Inicia carregando
        carregarAvaliacoes();
    </script>

    <%- include('partials/footer') %>
<%- include('partials/header', { titulo: 'Meu Perfil' }) %>

<main style="max-width: 800px; margin: 3rem auto; padding: 0 1rem;">
    <div class="form-card" style="padding: 2rem; margin-bottom: 2rem;">
        <div style="display: flex; align-items: center; gap: 15px;">
            <div style="font-size: 2.5rem;">üë§</div>
            <div>
                <h2 style="margin: 0; color: var(--cor-primaria);">Ol√°, <span id="spanNome">Visitante</span>!</h2>
                <p style="margin: 0; color: var(--texto-leve);">Seus dados e favoritos ficam salvos neste navegador.</p>
            </div>
        </div>
        <form id="formPerfil" style="margin-top: 1rem; display: grid; grid-template-columns: 1fr 1fr; gap: 10px;">
            <input type="text" id="nomeSalvo" placeholder="Seu Nome">
            <input type="email" id="emailSalvo" placeholder="Seu E-mail">
            <button type="submit" class="btn btn-enviar" style="grid-column: span 2;">Salvar Dados</button>
        </form>
    </div>

    <div>
        <h3 style="border-bottom: 2px solid var(--borda-suave); padding-bottom: 10px;">‚ù§Ô∏è Meus Favoritos</h3>
        <div id="listaFavoritos" style="display: grid; grid-template-columns: repeat(auto-fill, minmax(220px, 1fr)); gap: 1.5rem; margin-top: 1.5rem;">
            <p>Carregando favoritos...</p>
        </div>
    </div>
</main>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/js/favoritos.js"></script>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        // 1. Perfil
        const perfil = JSON.parse(localStorage.getItem('perfil_visitante')) || {};
        if(perfil.nome) {
            document.getElementById('nomeSalvo').value = perfil.nome;
            document.getElementById('spanNome').innerText = perfil.nome.split(' ')[0];
        }
        if(perfil.email) document.getElementById('emailSalvo').value = perfil.email;

        document.getElementById('formPerfil').addEventListener('submit', (e) => {
            e.preventDefault();
            const dados = { nome: document.getElementById('nomeSalvo').value, email: document.getElementById('emailSalvo').value };
            localStorage.setItem('perfil_visitante', JSON.stringify(dados));
            Swal.fire('Salvo!', '', 'success');
            if(dados.nome) document.getElementById('spanNome').innerText = dados.nome.split(' ')[0];
        });

        // 2. Renderizar Favoritos
        renderizarFavoritos();
    });

    function renderizarFavoritos() {
        const lista = Favoritos.getTodos();
        const container = document.getElementById('listaFavoritos');
        
        if (lista.length === 0) {
            container.innerHTML = '<p style="color: var(--texto-leve); grid-column: 1/-1; text-align: center;">Nada salvo ainda. Clique nos cora√ß√µes pelo site!</p>';
            return;
        }

        container.innerHTML = '';
        lista.forEach(item => {
            container.innerHTML += `
                <div class="card-menu" style="padding: 0; overflow: hidden; display: flex; flex-direction: column; text-align: left;">
                    <div style="height: 120px; background-image: url('${item.imagem}'); background-size: cover; background-position: center; position: relative;">
                        <button onclick="Favoritos.toggle('${item.id}', '${item.tipo}'); renderizarFavoritos();" 
                                style="position: absolute; top:5px; right:5px; background: rgba(0,0,0,0.6); color: white; border: none; border-radius: 50%; width: 30px; height: 30px; cursor: pointer;">‚úï</button>
                    </div>
                    <div style="padding: 1rem; flex-grow: 1;">
                        <span style="font-size: 0.75rem; color: var(--cor-primaria); font-weight: bold; text-transform: uppercase;">${item.tipo}</span>
                        <h4 style="margin: 5px 0; font-size: 1rem; color: var(--texto-titulo);">${item.nome}</h4>
                        <a href="${item.link}" class="btn btn-primary" style="display: block; text-align: center; margin-top: 10px; font-size: 0.8rem;">Ver</a>
                    </div>
                </div>
            `;
        });
    }
</script>

